set_llm provider: :openai, api_key: ENV['OPENAI_API_KEY'], model: 'gpt-4o'
set_language :ruby

application "SIMPLE Editor", language: :ruby, output_file: "simpleeditor.pl" do
  context "dependencies" do
    <<-LLM
    Must use GTK.
    LLM
  end

  context "application" do
    <<-LLM
    Has input as text editor.
    Has top menu with following actions:
    - File
      - New
      - Open
      - Save
    - View
      - Font Size (12 15 20 25) when selected this override the font size of the input.
    LLM
  end
end
